@model IEnumerable<Passport>
@{
    ViewData["Title"] = "ListPassports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pasaportes</h1>

<p>
    @Html.ActionLink("Nuevo", "New", "Passports", null, new { @class = "btn btn-primary" })
</p>

<form asp-action="Index">
    <p>
        <div class="input-group">
            @Html.TextBox("SearchString", null, new { @class = "form-control" })
            <div class="input-group-append">
                <button type="submit" class="btn btn-secondary">Buscar</button>
            </div>
        </div>
    </p>
</form>


<table id="passports" class="table">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>
                @Html.ActionLink("Número de Pasaporte", "Index", "Passports", new
                {
                    sortOrder = ViewBag.IdSortParm,
                    searchString = ViewBag.SearchString
                })
            </th>
            <th>
                @Html.ActionLink("Carnet del Propietario", "Index", "Passports", new
                {
                    sortOrder = ViewBag.OwnerIdSortParm,
                    searchString = ViewBag.SearchString
                })
            </th>
            <th>
                @Html.ActionLink("Nombre del Propietario", "Index", "Passports", new
                {
                    sortOrder = ViewBag.OwnerNameSortParm,
                    searchString = ViewBag.SearchString
                })
            </th>
            <th>
                @Html.ActionLink("Expedición", "Index", "Passports", new
                {
                    sortOrder = ViewBag.ExpeditionSortParm,
                    searchString = ViewBag.SearchString
                })
            </th>
            <th>
                @Html.ActionLink("Vencimiento", "Index", "Passports", new
                {
                    sortOrder = ViewBag.ExpirationSortParm,
                    searchString = ViewBag.SearchString
                })
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Passport passport in Model)
        {
            <tr>
                <td>@passport.PassportType.Name</td>
                <td>@Html.ActionLink(passport.Id, "Details", new { id = passport.Id })</td>
                <td>@Html.ActionLink(passport.OwnerId, "Details", "People", new { id = passport.OwnerId })</td>
                <td>@passport.Owner.FullName()</td>
                <td>@passport.ExpeditionDate.Day/@passport.ExpeditionDate.Month/@passport.ExpeditionDate.Year</td>
                <td>@passport.ExpirationDate.Day/@passport.ExpirationDate.Month/@passport.ExpirationDate.Year</td>
                <td>
                    <button class="btn-danger btn-sm js-delete" data-passport-id=@passport.Id>Eliminar</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    @Html.ActionLink("Anterior", "Index", new { 
        sortOrder = ViewBag.IdSortParm, 
        keepOrder = "True", 
        searchString = ViewBag.SearchString, 
        pageIndex = ViewBag.PageIndex - 1 })
    @(ViewBag.PageIndex + 1) / @(ViewBag.MaxPageIndex + 1)
    @Html.ActionLink("Siguiente", "Index", new { 
        sortOrder = ViewBag.IdSortParm, 
        keepOrder = "True", 
        searchString = ViewBag.SearchString, 
        pageIndex = ViewBag.PageIndex + 1 })
</p>


@section scripts
{
    <script>
        $(document).ready(function () {
            $("#passports").on("click", ".js-delete", function () {
                var button = $(this)

                bootbox.confirm("Esta seguro que desea eliminar este pasaporte del registro", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/Passports/" + button.attr("data-passport-id"),
                            method: "DELETE",
                            success: function () {
                                
                                location.reload();
                            }
                        })
                    }
                })
            });
        });
    </script>
}